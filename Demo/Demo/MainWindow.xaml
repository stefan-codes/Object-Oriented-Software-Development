<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Height="320" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="259*"/>
            <ColumnDefinition Width="258*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="addRecord" Content="Add" HorizontalAlignment="Left" Margin="100,250,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="deleteRecord" Content="Delete" Margin="96,250,87,0" VerticalAlignment="Top" Grid.Column="1"/>
        <ListBox Margin="10,50,10,50" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
